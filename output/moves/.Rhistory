get.packages <- function ()
{
pkglist = c("bbmle", "boot", "chron", "coda", "ellipse","emdbook",
"gplots", "gtools", "gdata", "Hmisc","lattice", "MCMCpack",
"plotrix", "R2WinBUGS", "reshape", "rgl", "scatterplot3d")
inst.pkgs = rownames(installed.packages())
newpkgs <- pkglist[!pkglist %in% inst.pkgs]
if (length(newpkgs) > 0) {
do.call("install.packages", list(pkglist))
}
}
get.packages()
