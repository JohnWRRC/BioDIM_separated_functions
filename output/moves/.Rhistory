# Generating the animation
N <- 60 # number of images
name <- "_teste_run_0001_TS_" # prefix of the file name
step <- 1 # is there any "jump" among subsequent images or all of them will be plotted? if there is, what is the jump step?
# if there is more than 10 000 images, we have to change the code!
t=1 # counter
saveGIF({
while (t <= N) {
# the next lines standardize the number of the image to fit the file name
if(t < 10) tt <- paste("000", t, sep="") else
if(t < 100) tt <- paste("00", t, sep="") else
if(t < 1000) tt <- paste("0", t, sep="") else
tt <- t
img <- readPNG(paste(name,tt,".png",sep=""), native=T, info=T) # reads the png file
plot(0, 0, xlim=c(0,20), ylim=c(0,20), xaxt="n", yaxt="n", xlab="", ylab="", t="n") # plot png image on R
rasterImage(img, -1, -1, 21, 21)
t<-t+step
}
}, convert="gm convert", movie.name=paste(name,".gif",sep=""), outdir=getwd(), interval = 0.08)
